@model IEnumerable<Category>


<li class="nav-item dropdown">
    <a 
        class="nav-link dropdown-toggle"
        href="#"
        role="button"
        data-toggle="dropdown"
        data-bs-toggle="dropdown"
        id="nav-dropdown"
        aria-expanded="false"
    >   
    Shop
    </a>
    <ul class="dropdown-menu" aria-labelledby="nav-dropdown">
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Pie" asp-action="List" asp-route-category="@category.Name">
                    @category.Name
                </a>
            </li>
        }
        <li>
            <a class="dropdown-item" asp-controller="Pie" asp-action="List">All Pies</a>
        </li>
    </ul>
</li>